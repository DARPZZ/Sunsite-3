        <TextBox x:Name="group" HorizontalAlignment="Left" Margin="347,91,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="277"/>
        <TextBox x:Name="SubjectTextbox" HorizontalAlignment="Left" Margin="347,158,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="277" Height="70"/>
        <Button Click="back" Content="Go back" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="59" Width="87"/>
        <Label FontSize="15" Content="Subject" HorizontalAlignment="Left" Margin="461,127,0,0" VerticalAlignment="Top"/>
